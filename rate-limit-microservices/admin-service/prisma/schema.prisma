generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiKey {
  id              Int       @id @default(autoincrement())
  key             String    @unique @db.VarChar(255)
  name            String    @db.VarChar(255)
  userId          String?   @map("user_id") @db.VarChar(255)
  tier            String    @default("free") @db.VarChar(50)
  
  // Rate limit configuration
  tokensPerWindow Int       @default(100) @map("tokens_per_window")
  refillRate      Int       @default(10) @map("refill_rate")
  maxBurst        Int       @default(100) @map("max_burst")
  
  // Status
  enabled         Boolean   @default(true)
  
  // Timestamps
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  lastUsed        DateTime? @map("last_used")
  
  // Metadata
  description     String?   @db.Text
  allowedIps      String[]  @map("allowed_ips")
  
  @@index([key])
  @@index([enabled])
  @@index([userId])
  @@index([tier])
  @@index([createdAt])
  @@map("api_keys")
}
